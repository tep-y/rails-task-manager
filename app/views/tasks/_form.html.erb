<%= form_for(@task) do |t| %>
    <%= t.label :title %>
    <%= t.text_field :title %>

    <%= t.label :details %>
    <%= t.text_area :details, :rows => 4 %>

    <%= t.label :completed %>
    <%= t.check_box :completed %>

    <%= t.submit %>
<% end %>


<p class="show-menu">
  <%= link_to "Back to list", tasks_path %>
</p>
